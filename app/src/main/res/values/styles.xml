<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LightToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:theme">@style/LightToolbarThemeOverlay</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="titleTextAppearance">@style/BaseToolbarTitleTextAppearance</item>
        <item name="titleTextColor">@color/text_dark</item>
    </style>

    <style name="LightToolbarThemeOverlay" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/text_dark</item>
    </style>

    <style name="BaseToolbarTitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--TabLayout-->
    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="card_text_secondary_info" parent="text_secondary">
        <item name="android:padding">@dimen/activity_margin</item>
        <item name="android:gravity">center|left</item>
    </style>

    <style name="text_secondary">
        <item name="android:textSize">@dimen/card_context_size_12sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!--花瓣详细-->
    <style name="text_primary">
        <item name="android:textSize">@dimen/card_context_size_16sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center|left</item>
    </style>

    <style name="text_image_detail_secondary" parent="text_secondary">
        <item name="android:textSize">@dimen/card_context_size_14sp</item>
    </style>

</resources>
